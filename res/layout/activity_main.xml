	    android:onClick="countRows"
	    android:textSize="35sp"
	    android:layout_marginBottom="50sp"/>
	    <!-- android:layout_above="@+id/view_stitches"  -->
"
	<Button
	    android:id="@+id/view_stitches"
    	android:layout_below="@id/count_rows"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/view_stitches"
